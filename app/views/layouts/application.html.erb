<!DOCTYPE html>
<html>
<head>
  <title>Ipoh Airport - Cleartrip</title>
  <meta charset="UTF-8">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica Neue, Ubuntu, Arial, sans-serif;      margin: 0 auto;
      max-width: 1200px;
      padding: 0 20px;
    }

    h1, h2, h3 {
      color: #222;
    }

    .highlight {
      background-color: #fff4c5;
      padding: 15px;
      border-left: 5px solid #ffc107;
      margin: 20px 0;
    }

    .section { margin-bottom: 30px; }
    ul, ol { padding-left: 20px; }

    .search-box {
      display: flex;
      gap: 30px;
      margin-bottom: 10px;
      padding: 15px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
      border-radius: 5px;
      background: #f9f9f9;
      align-items: center;
    }

    .search-box input,
    .search-box select {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .search-box button {
      background: #007bff;
      color: white;
      border: none;
      padding: 10px 25px;
      cursor: pointer;
      border-radius: 4px;
      transition: background 0.3s ease;
    }

    .search-box button:hover {
      background: #0047ab;
    }

    .topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #ccc;
      padding: 10px 0;
    }

    .top-left img, .top-right img {
      height: 24px;
      margin-right: 10px;
    }

    .top-left {
      display: flex;
      align-items: center;
    }

    .sidebar { float: right; width: 28%; margin-left: 2%; }
    .content { float: left; width: 70%; }

    .clearfix::after {
      content: "";
      clear: both;
      display: table;
    }

    .info-table {
      border-collapse: collapse;
      width: 100%;
    }

    .info-table td, .info-table th {
      border: 1px dotted #ccc;
      padding: 10px;
    }

    .info-table td:first-child {
      font-weight: bold;
      background: #f9f9f9;
    }

    .footer-links {
      font-size: 14px;
      color: #666;
      margin-top: 50px;
    }

    .footer-links a {
      color: #333;
      margin-right: 10px;
      text-decoration: none;
    }

    .bottom-footer {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      margin-top: 20px;
      border-top: 1px solid #ccc;
      padding-top: 10px;
    }

    .airline-logo {
      display: flex;
      align-items: center;
      margin-bottom: 6px;
    }

    .airline-logo img {
      width: 20px;
      height: 20px;
      margin-right: 8px;
    }

    .breadcrumb {
      font-size: 14px;
      color: #555;
      margin: 15px 0;
    }

    .flag-circle {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      overflow: hidden;
      border: 1px solid #ccc;
      display: inline-block;
      vertical-align: middle;
      cursor: pointer;
    }

    #country-select {
      display: none;
    }

    .line-separator {
      border: none;
      height: 1px;
      background-color: #ddd;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <!-- HEADER -->
  <div class="topbar">
    <div class="top-left">
      <%= image_tag 'logo.png', alt: 'Cleartrip Logo' %>
      <%= image_tag 'flight.png', alt: 'Flights' %>
      <%= image_tag 'hotel.png', alt: 'Hotels' %>
      <%= image_tag 'discount.png', alt: 'Discounts' %>
    </div>

    <div class="top-right">
      <div class="flag-circle" onclick="toggleCountrySelect()">
        <%= image_tag 'uae-flag.png', id: 'country-flag', alt: 'Country Flag', style: 'width: 100%; height: 100%; object-fit: cover;' %>
      </div>
      <select id="country-select" onchange="updateFlag()">
        <option value="<%= asset_path('uae-flag.png') %>" selected>UAE</option>
        <option value="<%= asset_path('india-flag.png') %>">India</option>
        <option value="<%= asset_path('saudi-flag.png') %>">Saudi Arabia</option>
        <option value="<%= asset_path('oman-flag.png') %>">Oman</option>
      </select>
    </div>
  </div>

  <!-- BREADCRUMB -->
  <div class="breadcrumb">
    <a href="#">Home</a> &raquo; <a href="#">Tourism</a>
  </div>

  <!-- SEARCH BOX -->
  <div class="search-box">
    <select>
      <option>One way</option>
      <option>Round trip</option>
    </select>
    <input type="text" placeholder="From">
    <input type="text" placeholder="To">
    <input type="date">
    <input type="date">
    <select>
      <option>1 Traveller</option>
    </select>
    <button>Search</button>
  </div>

  <!-- SEPARATOR -->
  <hr class="line-separator">

  <!-- PAGE CONTENT -->
  <%= yield %>

  <!-- JS FOR FLAG -->
  <script>
    function updateFlag() {
      const select = document.getElementById("country-select");
      const selectedFlag = select.value;
      document.getElementById("country-flag").src = selectedFlag;
      select.style.display = "none";
    }

    function toggleCountrySelect() {
      const select = document.getElementById("country-select");
      select.style.display = select.style.display === "none" ? "inline-block" : "none";
    }
  </script>
</body>
</html>
